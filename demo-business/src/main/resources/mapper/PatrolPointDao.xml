<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.hup.dao.PatrolPointDao">

    <!--
        1.属性名,表名等用小写,select / from之类关键字用大写。
        2.<select>返回值尽量使用resultType，当实体属性名称与表中列名无法匹配时候，使用resultMap进行映射。
        3.不要用parameterType属性(多余)。
        4.一般情况下用#{},不要用${}。
        5.对做了分表分库后的数据集做查询操作时，不支持Join, 嵌套查询，order by, group by等操作。
        6.对SQL进行排版。
        7.建立索引，在数据量大的数据表中做查询的时候，对关键字段建立索引。（具体是否要加索引，请与数据组同事讨论）
          WHERE t.username = #{userName}
    -->
    <sql id="table_columns">

    </sql>

    <select id="queryPatrolPointList" resultType="com.hup.entity.PatrolPoint">
        SELECT * FROM pps_patrol_point
    </select>

    <select id="getPatrolPointCount" resultType="java.lang.Integer">
        SELECT COUNT(1) FROM pps_patrol_point
    </select>

    <insert id="insertPoint" useGeneratedKeys="true" keyProperty="patrolPoint.id">
        INSERT INTO pps_patrol_point
        (point_name, point_desc, point_agent, coordinate_x, coordinate_y, create_date)
        VALUES
        (#{patrolPoint.pointName}, #{patrolPoint.pointDesc}, #{patrolPoint.pointAgent}, #{patrolPoint.coordinateX},
        #{patrolPoint.coordinateY}, NOW())
    </insert>

    <delete id="deletePoint">
        DELETE FROM pps_patrol_point WHERE id = #{id}
    </delete>

    <select id="getPoint" resultType="com.hup.entity.PatrolPoint">
        SELECT * FROM pps_patrol_point WHERE id = #{id}
    </select>

    <update id="updatePoint">
        UPDATE pps_patrol_point SET
        point_name = #{patrolPoint.pointName},
        point_desc = #{patrolPoint.pointDesc},
        coordinate_x = #{patrolPoint.coordinateX},
        coordinate_x = #{patrolPoint.coordinateY}
        WHERE id = #{patrolPoint.id}
    </update>

</mapper>